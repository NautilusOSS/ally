{
  "app": {
    "name": "Ally",
    "description": "DEX Aggregator for Voi Network",
    "version": "1.0.0"
  },
  "ui": {
    "defaultSlippageTolerance": 0.01,
    "slippageToleranceOptions": [0.005, 0.01, 0.02, 0.03, 0.05],
    "priceImpactWarningThreshold": 0.05,
    "priceImpactDangerThreshold": 0.10,
    "defaultAmountDecimals": 6

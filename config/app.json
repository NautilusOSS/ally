    "commonIntermediateTokens": ["VOI", "wVOI", "USDC", "aUSDC", "UNIT"],
    "maxHops": 2,
    "enableCrossDexRouting": true
  },
  "dexes": {
    "humbleswap": {
      "name": "HumbleSwap",
      "displayName": "HUMBLE",
      "feePct": 0.3,
      "enabled": true
    },
    "nomadex": {
      "name": "Nomadex",
      "displayName": "PACT",
      "feePct": 0.25,
      "enabled": true
    },
    "swapApi": {
      "name": "Swap API",
      "displayName": "SWAP_API",
      "feePct": 0.3,
      "enabled": true,
      "autoDiscoverPools": true
    }
  }
}

